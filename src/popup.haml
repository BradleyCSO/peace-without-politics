!!! strict
%html
  %head
    %title= 'Game of Spoils'
    %script{src: "scripts/vendor/livereload.js?host=localhost&port=35729"}
    %script{src: "scripts/vendor/jquery.min.js", type: "text/javascript"}
    %script{src: "scripts/constants.js",         type: "text/javascript"}
    %script{src: "scripts/popup.js",             type: "text/javascript"}
    %script{src: "styles/popup.css",             type: "text/javascript"}
    %link{rel: "stylesheet", type: "text/css", href: "styles/popup.css"}
    %link{rel: "stylesheet", type: "text/css", href: "assets/fonts/cinzel-decorative.css"}
  %body#game-of-spoilers-popup
    #title= 'Game of Spoilers'
    #subtitle
      %span= 'By '
      %a{href: "http://stublair.co", target: "_blank"}= 'Stu Blair'
    %img#stark-image{src: "assets/images/blind_stark.png"}
    %div
    .setting-holder
      .onoffswitch
        %input#blocking-enabled-toggle.onoffswitch-checkbox{type: "checkbox", name: "onoffswitch", checked: "checked"}
        %label.onoffswitch-label{for: "blocking-enabled-toggle"}
          %span.onoffswitch-inner
          %span.onoffswitch-switch
      .setting-text= 'Blocking spoilers enabled'
    .setting-holder
      .onoffswitch
        %input#show-specific-word-toggle.onoffswitch-checkbox{type: "checkbox", name: "onoffswitch", checked: "checked"}
        %label.onoffswitch-label{for: "show-specific-word-toggle"}
          %span.onoffswitch-inner
          %span.onoffswitch-switch
      .setting-text= 'Show specific phrase blocked'

    #num-spoilers-prevented
    #lifetime-spoilers-prevented